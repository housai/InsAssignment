<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.klein.dao.UserDao">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="com.klein.model.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <id column="username" property="username" jdbcType="VARCHAR" />
        <id column="password" property="password" jdbcType="VARCHAR" />
        <id column="profilephoto" property="profilephoto" jdbcType="VARCHAR" />
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="selectUserById" parameterType="int" resultType="com.klein.model.User">
        SELECT * FROM t_user WHERE id = #{userId}
    </select>
    <select id="selectUserByName" parameterType="String" resultType="com.klein.model.User">
        SELECT * FROM t_user WHERE username = #{Name}
    </select>
    <insert id="insertUser" parameterType="com.klein.model.User" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO t_user (username,password)
              VALUES   (#{username},#{password})
    </insert>

</mapper>
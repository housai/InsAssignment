<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.klein.dao.PostDao">
    <!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="com.klein.model.Post">
        <id column="postId" property="postId" jdbcType="INTEGER" />
        <id column="userId" property="userId" jdbcType="INTEGER" />
            <id column="photourl" property="photourl" jdbcType="VARCHAR" />
        <id column="time" property="time" jdbcType="DATE" />
        <result column="location" property="location" jdbcType="VARCHAR" />
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="selectPostById" parameterType="int" resultType="com.klein.model.Post">
        SELECT * FROM t_post WHERE postId = #{postId}
    </select>
    <select id="selectPostByUserId" parameterType="int" resultType="com.klein.model.Post">
        SELECT * FROM t_post WHERE userId = #{userId}
    </select>
    <select id="selectPostByTime" parameterType="Date" resultType="com.klein.model.Post">
        SELECT * FROM t_post WHERE time = #{time}
    </select>
    <select id="selectPostByLocation" parameterType="String" resultType="com.klein.model.Post">
        SELECT * FROM t_post WHERE location = #{location}
    </select>
    <insert id="insertPost" parameterType="com.klein.model.Post" useGeneratedKeys="true" keyProperty="postId" keyColumn="postId">
        INSERT INTO t_post (photourl,userId,location)
        VALUES   (#{photourl},#{userId},#{location})
    </insert>

</mapper>